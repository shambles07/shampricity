alias cd..='cd-up'                  #  Shortcut for cd-up command
alias chrome='google-chrome-stable' #  Open Google Chrome by typing chrome
alias chx='chmod +x'                #  Make a file executable by the current user
alias cl='clear'                    #  Clear
